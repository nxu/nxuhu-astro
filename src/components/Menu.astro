---
import MenuItem from './MenuItem.astro';

const { active } = Astro.props;
---
<div class="mb-4 flex gap-4 px-3 py-2 bg-gray-50 dark:bg-gray-800 rounded print:hidden">
    <MenuItem active={active == 'home'} href="/">Home</MenuItem>
    <MenuItem active={active == 'resume'} href="/resume">Resume</MenuItem>
    <MenuItem active={active == 'blog'} href="/blog">Blog</MenuItem>
    <MenuItem active={active == 'cubing'} href="/cubing">Cubing</MenuItem>
    <MenuItem active={active == 'dj'} href="/dj">DJ</MenuItem>
</div>