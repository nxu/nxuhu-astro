---
import '../assets/fonts.css'
import DarkModeToggle from '../components/DarkModeToggle.astro';
import Menu from '../components/Menu.astro';

const { activeMenu, meta } = Astro.props;

let title = meta?.title ? meta.title : 'Zsolt Fekete (nxu)';
let description = meta?.description ? meta.description : 'Senior PHP/Laravel Software Developer from Sopron, Hungary';
---
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width">
  <title>{title}</title>
  
  <meta name="description" content={description}>
  <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
  <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
  <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
  <link rel="manifest" href="/site.webmanifest">
  <link rel="mask-icon" href="/safari-pinned-tab.svg" color="#444444">
  <meta name="msapplication-TileColor" content="#603cba">
  <meta name="theme-color" content="#ffffff">
  
  <meta name="twitter:card" content="summary">
  <meta name="twitter:title" content={title} />
  <meta name="twitter:description" content={description}/>
  <meta name="twitter:creator" content="@nabunub" />
  <meta name="twitter:image" content="https://nxu.hu/ogimage.png" />

  <meta property="og:title" content={title} />
  <meta property="og:url" content="https://nxu.hu" />
  <meta property="og:image" content="https://nxu.hu/ogimage.png" />
  <meta property="og:description" content={description}/>
  <script>
    if (localStorage.theme === 'dark' || (!('theme' in localStorage) && window.matchMedia('(prefers-color-scheme: dark)').matches)) {
      document.documentElement.classList.add('dark');
    } else {
      document.documentElement.classList.remove('dark');
    }
  </script>
</head>
<body class="font-serif dark:bg-gray-900 dark:text-gray-100">
  <div class="absolute md:fixed top-4 right-4 md:right-8">
    <DarkModeToggle></DarkModeToggle>
</div>

  <main class="mx-auto px-4 max-w-3xl py-4">
    <Menu active={activeMenu}></Menu>

    <slot></slot>
  </main>
</body>
</html>
