---
import '../styles/global.css';
import Header from '../components/Header.astro';

let title = 'Zsolt Fekete (nxu)';
let description = 'Zsolt Fekete (nxu) - Software Developer from Sopron, Hungary';
---
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width">
  <title>{title}</title>
  <link rel="shortcut icon" href="/favicon.ico" type="image/x-icon" />
  <link rel="apple-touch-icon" href="/apple-touch-icon.png" />
  <link rel="apple-touch-icon" sizes="57x57" href="/apple-touch-icon-57x57.png" />
  <link rel="apple-touch-icon" sizes="72x72" href="/apple-touch-icon-72x72.png" />
  <link rel="apple-touch-icon" sizes="76x76" href="/apple-touch-icon-76x76.png" />
  <link rel="apple-touch-icon" sizes="114x114" href="/apple-touch-icon-114x114.png" />
  <link rel="apple-touch-icon" sizes="120x120" href="/apple-touch-icon-120x120.png" />
  <link rel="apple-touch-icon" sizes="144x144" href="/apple-touch-icon-144x144.png" />
  <link rel="apple-touch-icon" sizes="152x152" href="/apple-touch-icon-152x152.png" />
  <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon-180x180.png" />
  
  <meta name="description" content={description}>

  <meta name="twitter:title" content={title} />
  <meta name="twitter:description" content={description}/>
  <meta name="twitter:creator" content="@nabunub" />
  <meta name="twitter:image" content="https://nxu.hu/avatar.png" />

  <meta property="og:title" content={title} />
  <meta property="og:url" content="https://nxu.hu" />
  <meta property="og:image" content="https://nxu.hu/avatar.png" />
  <meta property="og:description" content={description}/>
  <script>
    if (localStorage.theme === 'dark' || (!('theme' in localStorage) && window.matchMedia('(prefers-color-scheme: dark)').matches)) {
      document.documentElement.classList.add('dark');
    } else {
      document.documentElement.classList.remove('dark');
    }
  </script>
</head>
<body class="font-serif dark:bg-gray-900 dark:text-gray-100">
  <main class="mx-auto px-4 max-w-3xl py-8">
    <Header></Header>
    <slot></slot>
  </main>
</body>
</html>
